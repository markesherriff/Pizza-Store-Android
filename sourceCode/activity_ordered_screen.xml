<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orderedScreen">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mainView_headerImage4"
            android:layout_width="731dp"
            android:layout_height="51dp"
            android:scaleType="centerCrop"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/pizza_hut" />

        <TextView
            android:id="@+id/or_orderReview"
            android:layout_width="match_parent"
            android:layout_height="308dp"
            android:text="Order Review"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/or_orderAgainBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="order again" />

        <Button
            android:id="@+id/or_accountBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>