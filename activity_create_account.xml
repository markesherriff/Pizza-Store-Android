<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mainView_headerImage2"
            android:layout_width="731dp"
            android:layout_height="51dp"
            android:scaleType="centerCrop"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/pizza_hut" />

        <EditText
            android:id="@+id/create_EditUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="username (required)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/create_EditPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password (required)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/create_editRetypePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="re-type password (required)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/create_editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="email (required)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/create_editAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="address"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/create_submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="submit" />

        <Button
            android:id="@+id/create_loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>